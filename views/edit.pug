doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side Javascript
    ul
      each topic in topics
        li
          a(href='/topic/'+topic.id)= topic.title
    artcle
       form(action='/topic/'+topic.id+'/edit' method='post')
        p
          input(type='text' name='title' value=topic.title )
        p
          textarea(name='description' )
            =topic.description
        p
          input(type='text' name='author' value=topic.author)
        p
          input(type='submit')
    ul
      li
        a(href='/topic/new') new